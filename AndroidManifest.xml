<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simple_storage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Storage"
            android:label="@string/title_activity_storage" >
        </activity>
        <activity
            android:name=".Product"
            android:label="@string/title_activity_product" >
        </activity>
        <activity
            android:name=".Product_detail"
            android:label="@string/title_activity_product_detail" >
        </activity>
        <activity
            android:name=".Built_Product"
            android:label="@string/title_activity_built__product" >
        </activity>
        <activity
            android:name=".Buy_main_page"
            android:label="@string/title_activity_buy_main_page" >
        </activity>
        <activity
            android:name=".Buy_Add_page"
            android:label="@string/title_activity_buy__add_page" >
        </activity>
    </application>

</manifest>
